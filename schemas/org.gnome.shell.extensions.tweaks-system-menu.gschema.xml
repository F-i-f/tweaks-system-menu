<schemalist gettext-domain="tweaks-system-menu">
  <schema id="org.gnome.shell.extensions.tweaks-system-menu"
	  path="/org/gnome/shell/extensions/tweaks-system-menu/">
    <key name="position" type="i">
      <default>-1</default>
      <range min="-1" max="99"/>
      <summary>Buttons Position</summary>
      <description>If set to -1, the position is automatic: buttons
      will show up after Settings.  If set to zero or more, the actual
      buttons' position on the system menu.</description>
    </key>
    <key name="applications" type="as">
      <default>["org.gnome.tweaks.desktop",
      "org.gnome.Extensions.desktop",
      "com.mattjakeman.ExtensionManager.desktop"]</default>
      <summary>List of applications to show</summary>
      <description>List of applications to display in the system
      menu.</description>
    </key>
    <key name="debug" type="b">
      <default>false</default>
      <summary>Debugging.</summary>
      <description>Enable debugging for the extension.</description>
    </key>
  </schema>
</schemalist>
